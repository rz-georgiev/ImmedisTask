@model ImmedisTask.ViewModels.Home.IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    @foreach (var employee in Model.Employees)
    {
        <div class="card border-primary mb-3">
            <div class="card-header">Department: @employee.DepartmentName</div>
            <div class="card-body text-primary">
                <h5 class="card-title">
                    <a asp-area="" asp-controller="Employee" asp-action="Index" asp-route-id="@employee.Id">
                        Mr/Mrs: @employee.Name
                    </a>
                </h5>
                <p class="card-text">
                    Job: @employee.JobTitle <br />
                    Salary: $@employee.Salary <br />
                    Join date: @employee.JoinDate
                </p>
            </div>
        </div>
    }
</div>