@model ImmedisTask.InputModels.CommentInputModel

@{
    ViewData["Title"] = "Comment editor";
}

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="EmployeeId" />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Author"></label>
        <input asp-for="Author" class="form-control" />
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CommentContent"></label>
        <textarea asp-for="CommentContent" class="form-control"></textarea>
        <span asp-validation-for="CommentContent" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary btn-user btn-block">
        Save
    </button>
</form>